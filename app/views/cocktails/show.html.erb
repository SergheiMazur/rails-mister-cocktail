<h1><%= @cocktail.name %></h1>


<%= link_to "add new dose", new_cocktail_dose_path(@cocktail) %>



<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <p><td><%= button_to 'Delete', cocktail_dose_path( cocktail_id: @cocktail.id, id: dose.id) , :method=>:delete  %></td></p>
  <br>
<% end %>
